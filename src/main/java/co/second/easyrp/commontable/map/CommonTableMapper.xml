<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.second.easyrp.commontable.map.CommonTableMapper">

	<!-- (2024년 4월 30일 오후 3시 8분 박현우) -->
	<!-- 공통 테이블 구현을 위한 SQL Mapper -->

	<!-- 테이블 전체 목록(정보)을 가져오기위한 쿼리 -->
	<select id="commonTableAllList">
		SELECT post_id , title , content , author 
		FROM commontable;
	</select>
	
	<!-- 테이블에서 pagination을 위한 쿼리 -->
	<select id="commonTableAllListPaged">
		SELECT * 
		FROM commontable
		ORDER BY post_id
		LIMIT #{pageSize} OFFSET #{offset}
	</select>
	
</mapper>